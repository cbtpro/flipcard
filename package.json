{
  "name": "flipcard",
  "private": true,
  "scripts": {
    "dev:playground": "pnpm -r --filter ./playground/** run dev",
    "dev": "pnpm -r --filter ./packages/** run dev",
    "build": "pnpm -r run build",
    "clean": "rm -rf packages/*/dist",
    "storybook": "pnpm -r run storybook",
    "build-storybook": "pnpm -r run build-storybook",
    "publish": "pnpm publish --recursive --access public --filter ./packages/**"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@storybook/addon-a11y": "^9.0.16",
    "@storybook/addon-docs": "^9.0.16",
    "@storybook/addon-vitest": "^9.0.16",
    "@storybook/react-vite": "^9.0.16",
    "@types/node": "^24.0.12",
    "@types/react": "^19.1.8",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "less": "^4.3.0",
    "playwright": "^1.53.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rollup-plugin-styles": "^4.0.0",
    "storybook": "^9.0.16",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4",
    "vue": "^3.5.17"
  },
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "pnpm": "^10.10.0",
    "node": "^20.19.3"
  },
  "version": "0.0.1"
}
