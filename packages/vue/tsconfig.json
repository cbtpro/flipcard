{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./build/cache/tsbuildinfo",
    "composite": true,
    "module": "ESNext",
    "target": "ES2023",
    "lib": [
      "ES2023"
    ],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "dist",
    "paths": {
      "@flipcard/core": [
        "../../packages/core"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "vite.config.ts"
  ]
}